{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "composite": true,
    "downlevelIteration": true,
    "lib": ["es2016", "dom"],
    "moduleResolution": "node"
  },
  "include": ["src/*", "src/**/*.ts", "src/**/*.json"]
}
